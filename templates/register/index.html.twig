{% extends 'auth.html.twig' %}

{% block form %}
{{ parent() }}
    <form action="./register" method="post" class="text-dark">
    <div class="form-group">
      <label for="name">用户名</label>
      <input type="text" class="form-control" name="name" id="name" aria-describedby="helpId" placeholder="">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelpId" placeholder="">
    </div>

    <div class="form-group">
      <label for="qq">QQ</label>
      <input type="text" class="form-control" name="qq" id="qq" aria-describedby="emailHelpId" placeholder="">
    </div>
    <div class="form-group">
      <label for="pw">密码</label>
      <input type="password" class="form-control" name="password" id="pw" placeholder="password">
    </div>

    <div class="form-group">
      <label for="pw-again">确认密码</label>
      <input type="password" class="form-control" name="passwordAgain" id="pw-again" placeholder="confirm password">
    </div>
    <div class="form-group text-center">
      <button type="submit" class="disabled btn-submit text-light py-1">同意协议并注册</button>
    </div>
    </form>
{% endblock %}